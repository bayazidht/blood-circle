<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Donors.DonorProfileActivity">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:background="?android:attr/actionBarItemBackground"
            android:id="@+id/iv_back"
            android:padding="20dp"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="?android:attr/textColorTertiary"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_toStartOf="@id/iv_report"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_centerVertical="true"
            android:text="@string/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:id="@+id/iv_report"
            android:padding="20dp"
            android:src="@drawable/ic_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="?android:attr/textColorTertiary"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/tool_bar"
        android:visibility="gone"
        android:id="@+id/details_layout"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/iv_profile"
                app:contentPadding="5dp"
                android:padding="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:srcCompat="@drawable/ic_profile"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_whatsapp"
                    app:contentPadding="10dp"
                    android:padding="5dp"
                    app:strokeWidth="1dp"
                    app:tint="?attr/colorPrimary"
                    app:strokeColor="?attr/colorOutline"
                    android:background="?selectableItemBackgroundBorderless"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_email"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_email"
                    app:tint="?attr/colorPrimary"
                    app:contentPadding="10dp"
                    android:padding="5dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline"
                    android:background="?selectableItemBackgroundBorderless"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_phone"
                    app:tint="?attr/colorPrimary"
                    app:contentPadding="10dp"
                    android:padding="5dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline"
                    android:background="?selectableItemBackgroundBorderless"
                    app:shapeAppearanceOverlay="@style/circleImageView"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_email"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_phone"
                        android:textSize="16sp"
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_blood_type"
                        android:textSize="16sp"
                        android:id="@+id/tv_blood_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_calender"
                        android:textSize="16sp"
                        android:id="@+id/tv_last_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_flag"
                        android:textSize="16sp"
                        android:id="@+id/tv_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_location"
                        android:textSize="16sp"
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:alpha="0.5"
                        android:background="?attr/colorOutline"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:drawablePadding="20dp"
                        app:drawableTint="?attr/colorPrimary"
                        app:drawableStartCompat="@drawable/ic_details"
                        android:textSize="16sp"
                        android:id="@+id/tv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
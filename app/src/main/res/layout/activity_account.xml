<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Account.AccountActivity">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:background="?android:attr/actionBarItemBackground"
            android:id="@+id/iv_back"
            android:padding="20dp"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="?android:attr/textColorTertiary"
            tools:ignore="ContentDescription" />

        <TextView
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_centerVertical="true"
            android:text="@string/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ScrollView
        android:layout_above="@id/btn_delete_account"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/iv_logout"
                    android:padding="25dp"
                    android:layout_marginEnd="-8dp"
                    android:src="@drawable/ic_logout"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="?android:attr/textColorTertiary"
                    android:contentDescription="@string/logout"/>

                <LinearLayout
                    android:layout_toStartOf="@id/iv_logout"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="19sp"
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/tv_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/iv_profile"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="7dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:src="@drawable/ic_profile"/>

            </RelativeLayout>

            <View
                android:layout_marginTop="30dp"
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?attr/selectableItemBackground"
                android:text="@string/profile"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_profile"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                app:drawableTint="?android:attr/textColorTertiary"
                android:id="@+id/tv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Menu"
                android:background="?attr/selectableItemBackground"
                android:text="@string/my_requests"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawablePadding="20dp"
                app:drawableTint="?android:attr/textColorTertiary"
                app:drawableStartCompat="@drawable/ic_recent"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                android:id="@+id/tv_my_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                style="@style/TextAppearance.AppCompat.Menu"
                android:text="@string/become_a_donor"
                app:drawableStartCompat="@drawable/ic_donor"
                app:drawableTint="?android:attr/textColorTertiary"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawablePadding="20dp"
                android:id="@+id/switch_become_donor"
                android:layout_marginEnd="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                style="@style/TextAppearance.AppCompat.Menu"
                android:text="@string/become_a_volunteer"
                app:drawableStartCompat="@drawable/ic_volunteer"
                app:drawableTint="?android:attr/textColorTertiary"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:drawablePadding="20dp"
                android:id="@+id/switch_become_volunteer"
                android:layout_marginEnd="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:alpha="0.3"
                android:background="?attr/colorOutline"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:text="@string/delete_account"
        android:id="@+id/btn_delete_account"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
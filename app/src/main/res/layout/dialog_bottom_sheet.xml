<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/handle_bar"
        android:layout_centerHorizontal="true"
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:background="#C3C3C3"
        android:alpha=".50"/>

    <ScrollView
        android:layout_below="@id/handle_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/iv_profile"
                    app:contentPadding="5dp"
                    android:padding="5dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:srcCompat="@drawable/avatar_patient"/>

                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_profile"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:id="@+id/btn_message"
                            android:text="@string/message"
                            app:icon="@drawable/ic_whatsapp"
                            app:iconGravity="textStart"
                            app:iconPadding="5dp"
                            android:maxLines="1"
                            android:layout_width="0dp"
                            android:layout_height="45dp"/>

                        <Button
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:id="@+id/btn_call"
                            android:text="@string/call"
                            app:icon="@drawable/ic_phone"
                            app:iconGravity="textStart"
                            app:iconPadding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="45dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_hospital"
                android:textSize="16sp"
                android:id="@+id/tv_medical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_phone"
                android:textSize="16sp"
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_blood_type"
                android:textSize="16sp"
                android:id="@+id/tv_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_unit"
                android:textSize="16sp"
                android:id="@+id/tv_unit_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_calender"
                android:textSize="16sp"
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_flag"
                android:textSize="16sp"
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_location"
                android:textSize="16sp"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                app:drawableTint="?attr/colorPrimary"
                android:layout_margin="5dp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_details"
                android:textSize="16sp"
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="?selectableItemBackgroundBorderless"
                android:textStyle="italic"
                android:textColor="?android:attr/textColorLink"
                android:drawablePadding="10dp"
                android:padding="10dp"
                app:drawableEndCompat="@drawable/ic_arrow_right"
                android:textSize="16sp"
                android:id="@+id/tv_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="-10dp"
                android:layout_marginStart="15dp"
                android:textStyle="italic"
                android:alpha="0.5"
                android:id="@+id/tv_uploaded_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>